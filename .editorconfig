###
# This editorconfig is used to track code inside this repository only
#
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{md,txt}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

[*.py]
indent_size = 4

[.gitconfig, .gitconfig.*, .gitmodules]
indent_style = tab
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 8
